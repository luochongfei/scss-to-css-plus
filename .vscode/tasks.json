{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                {
                    "base": "$ts-webpack-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "webpack .\\d+\\.\\d+\\.\\d+ compiled with",
                        "endsPattern": "webpack .\\d+\\.\\d+\\.\\d+ compiled with"
                    }
                }
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$ts-webpack",
            "group": "build",
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}

